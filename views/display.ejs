<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Available Food Item - Foodie</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js
    "></script>
    <script src="/javascripts/foodie.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Foodie</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/admin/dashboard"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/add">Add Product</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/admin/display">View Products</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Others
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/admin/addCat">Add Category</a>
                </li>
                <li>
                  <a class="dropdown-item" href="/admin/addSubCat"
                    >Add Sub-Category</a
                  >
                </li>
              </ul>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <button class="btn btn-outline-success" type="submit">
              Sign Out
            </button>
          </form>
        </div>
      </div>
    </nav>

    <h2 class="text-center" style="text-decoration: underline">
      Available Food Items
    </h2>

    <% if(status==false) {%>
    <h3
      style="
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 12px;
      "
    >
      <%= data %>
    </h3>
    <%} else { %>
    <table class="table table-light table-striped" style="margin-top: 12px">
      <thead>
        <tr>
          <th class="text-center">Item Id</th>
          <th class="text-center">Food Name</th>
          <th class="text-center">Category - SubCategory - Type</th>
          <th class="text-center">Price - Offer Price</th>
          <th class="text-center">Ratings</th>
          <th class="text-center">Picture</th>
          <th class="text-center">Action</th>
        </tr>
      </thead>
      <% data.map((item, index)=>{%>
      <tbody>
        <tr>
          <td class="text-center" class="text-center"><%= index+1 %></td>
          <td class="text-center"><%= item.name %></td>
          <td class="text-center">
            <%= item.categoryname %> - <%= item.subcategoryname %> -
            <%=item.typename %>
          </td>
          <td class="text-center">
            <s style="color: red"> &#8377; <%=item.price%>/-</s>
            <b style="color: blue"> &#8377;<%= item.offerprice %>/- </b>
          </td>
          <td class="text-center"><%= item.rating %></td>
          <td class="text-center">
            <button
              type="button"
              class="btnPicture"
              fooditems="<%=JSON.stringify(item)%>"
              style="cursor: pointer"
            >
              <img
                src="/images/<%= item.picture %>"
                alt="Picture"
                style="border-radius: 128px; width: 64px"
              />
            </button>
          </td>
          <td class="text-center">
            <input
              class="ves-effect waves-light btn-small btnEdit"
              type="button"
              value="Edit"
              id="btnEdit"
              fooditems="<%=JSON.stringify(item)%>"
            />
          </td>
        </tr>
      </tbody>
      <%})%>
    </table>
    <% } %>

    <!-- Item Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Food Item</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="" class="col s12">
              <div class="row mt-3 mb-4 d-flex justify-content-between">
                <div class="input-field col s4">
                  <input type="hidden" name="id" id="id" />
                  <select
                    class="custom-select"
                    id="foodcategoryid"
                    name="foodcategoryid"
                  >
                    <option selected>--Choose Category--</option>
                  </select>
                </div>
                <div class="input-field col s4">
                  <select
                    class="custom-select"
                    id="foodsubcategoryid"
                    name="foodsubcategoryid"
                  >
                    <option selected>--Choose SubCategory--</option>
                  </select>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >Name</label
                    >
                    <input
                      type="name"
                      name="name"
                      class="form-control"
                      id="name"
                      aria-describedby="emailHelp"
                    />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s4">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >Price</label
                    >
                    <input
                      type="name"
                      name="price"
                      class="form-control"
                      id="price"
                      aria-describedby="emailHelp"
                    />
                  </div>
                </div>
                <div class="input-field col s4">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >Offer Price</label
                    >
                    <input
                      type="name"
                      name="offerprice"
                      class="form-control"
                      id="offerprice"
                      aria-describedby="emailHelp"
                    />
                  </div>
                </div>
                <div class="input-field col s4">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >Ratings</label
                    >
                    <input
                      type="name"
                      name="rating"
                      class="form-control"
                      id="rating"
                      aria-describedby="emailHelp"
                    />
                  </div>
                </div>
              </div>
              <div class="text-center m-2">
                <button type="submit" id="updBtn" class="btn btn-primary">
                  Edit Item
                </button>
                <button type="submit" id="delBtn" class="btn btn-primary">
                  Delete Item
                </button>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary close"
              data-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Picture Modal -->
    <div
      class="modal fade"
      id="pictureModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="name">Edit Picture</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <input type="hidden" name="id" id="id" />
            <div class="editPicture">
              <img
                id="pPicture"
                style="
                  display: block;
                  margin-left: auto;
                  margin-right: auto;
                  width: 50%;
                  width: 264px;
                  height: 216px;
                  border-radius: 128px;
                "
              />
            </div>
            <div class="mb-3" style="margin-top: 8px">
              <label for="formFile" class="form-label"
                >Choose New Image of Food Item</label
              >
              <input
                class="form-control"
                name="picture"
                type="file"
                id="picture"
              />
              <div class="text-center m-2">
                <button
                  type="submit"
                  id="updatePicture"
                  class="btn btn-primary"
                >
                  Update Picture
                </button>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary close"
              data-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
      crossorigin="anonymous"
    ></script>
    <script>
      $(document).ready(function () {
        $(".btnEdit").click(function () {
          $("#exampleModal").modal("show");

          const item = JSON.parse($(this).attr("fooditems"));
          //alert(item);

          $("#id").val(item.id);

          $("#foodcategoryid").val(item.foodcategoryid);
          $("#foodsubcategoryid")
            .empty()
            .append(
              $("<option>")
                .text(item.subcategoryname)
                .val(item.foodsubcategoryid)
            );

          $("#name").val(item.name);
          $("#price").val(item.price);
          $("#offerprice").val(item.offerprice);
          $("#rating").val(item.rating);

          $("#updBtn").click(function () {
            $.getJSON(
              "/admin/editProduct",
              {
                foodcategoryid: $("#foodcategoryid").val(),
                foodsubcategoryid: $("#foodsubcategoryid").val(),
                name: $("#name").val(),
                price: $("#price").val(),
                offerprice: $("#offerprice").val(),
                rating: $("#rating").val(),
                id: $("#id").val(),
              },
              function (data) {
                alert(data.message);
                window.location.reload("/admin/display");
              }
            );
          });

          $("#delBtn").click(function () {
            $.getJSON(
              "/admin/deleteItem",
              {
                id: $("#id").val(),
              },
              function (data) {
                alert(data.message);
                window.location.reload("/admin/display");
              }
            );
          });
        });

        $(".btnPicture").click(function () {
          $("#pictureModal").modal("show");

          const item = JSON.parse($(this).attr("fooditems"));

          $("#id").val(item.id);
          $("#name").html(`Edit Product ${item.name}`);
          $("#pPicture").attr("src", `/images/${item.picture}`);

          $("#updatePicture").click(function () {
            var formData = new FormData();

            formData.append("id", $("#id").val());

            var files = $("#picture")[0].files;

            if (files.length > 0) {
              formData.append("picture", files[0]);
            }

            $.ajax({
              url: "/admin/updatePicture",
              type: "post",
              processData: false,
              data: formData,
              contentType: false,

              success: function (response) {
                if (response != 0) {
                  if (response.result) {
                    alert(response.status);
                    window.location.reload("/admin/display");
                  } else {
                    alert(response.status);
                    window.location.reload("/admin/display");
                  }
                } else {
                  alert(response.status);
                  window.location.reload("/admin/display");
                }
              },
            });
          });
        });

        $(".close").click(function () {
          $("#exampleModal").modal("hide");
          $("#pictureModal").modal("hide");
        });
      });
    </script>
  </body>
</html>
