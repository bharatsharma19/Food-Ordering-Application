<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Profile - Foodie</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
  </head>
  <style>
    .gradient-custom {
      background: #f6d365;
      background: -webkit-linear-gradient(
        to right bottom,
        rgba(246, 211, 101, 1),
        rgba(253, 160, 133, 1)
      );
      background: linear-gradient(
        to right bottom,
        rgba(246, 211, 101, 1),
        rgba(253, 160, 133, 1)
      );
    }
  </style>
  <script
    src="https://kit.fontawesome.com/bda64bbf29.js"
    crossorigin="anonymous"
  ></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <body class="gradient-custom">
    <% if(admin === null ){ %>
    <div class="container my-3">
      <div class="row">
        <h2 class="text-center" style="text-decoration: underline">
          Please, <a href="/admin/signin"> Sign-In </a> to Continue
        </h2>
      </div>
    </div>

    <% } else { %>

    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Foodie</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/admin/dashboard"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/add">Add Product</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/display">View Products</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/admin/myprofile">My Profile</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Others
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/admin/addCat">Add Category</a>
                </li>
                <li>
                  <a class="dropdown-item" href="/admin/addSubCat"
                    >Add Sub-Category</a
                  >
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="/admin/deleteCat"
                    >Delete Category</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/admin/deleteSubCat"
                    >Delete Sub-Category</a
                  >
                </li>
              </ul>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <button class="btn btn-outline-success" type="submit">
              <a
                href="/admin/signout"
                style="text-decoration: none; color: inherit"
                >Sign Out</a
              >
            </button>
          </form>
        </div>
      </div>
    </nav>

    <div class="container my-4">
      <section style="height: 85vh">
        <div class="container py-5 h-100">
          <div
            class="row d-flex justify-content-center align-items-center h-100"
          >
            <div class="col col-lg-6 mb-4 mb-lg-0">
              <div class="card mb-3" style="border-radius: 0.5rem">
                <div class="row g-0">
                  <div
                    class="col-md-4 gradient-custom text-center text-white"
                    style="
                      border-top-left-radius: 0.5rem;
                      border-bottom-left-radius: 0.5rem;
                    "
                  >
                    <img
                      src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                      alt="Avatar"
                      class="img-fluid my-4"
                      style="width: 80px"
                    />
                    <h3 style="color: black"><%= admin.adminname %></h3>
                    <br />
                    <input
                      style="
                        background-color: blue;
                        color: white;
                        border: none;
                        cursor: pointer;
                        border-radius: 16px;
                        margin-bottom: 4px;
                      "
                      type="button"
                      value="Edit Profile"
                      id="btnEdit"
                      adminprofile="<%= JSON.stringify(admin) %>"
                    />
                    <br />
                    <input
                      style="
                        background-color: red;
                        color: white;
                        border: none;
                        cursor: pointer;
                        border-radius: 16px;
                        margin-top: 4px;
                      "
                      type="button"
                      value="Delete Profile"
                      id="btnDelete"
                      adminprofile="<%= JSON.stringify(admin) %>"
                    />
                    <!--i
                      class="fa-solid fa-pen-to-square"
                      id="editBtn"
                      style="color: black; cursor: pointer; margin-right: 6px"
                      onclick="editUser()"
                    ></i>
                    <i--
                      class="fa-solid fa-trash"
                      id="deleteBtn"
                      style="color: black; cursor: pointer; margin-left: 6px"
                      onclick="deleteUser()"
                    ></i-->
                  </div>
                  <div class="col-md-8">
                    <div class="card-body p-4">
                      <h6>Information</h6>
                      <hr class="mt-0 mb-4" />
                      <div class="row pt-1">
                        <div class="col-6 mb-3">
                          <h6>Email</h6>
                          <p class="text-muted">
                            <b> <%= admin.adminemail %> </b>
                          </p>
                        </div>
                        <div class="col-6 mb-3">
                          <h6>Phone</h6>
                          <p class="text-muted">
                            <b> +91-<%= admin.admincontact %> </b>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Edit User Profile Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Profile</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="" class="col s12">
              <input type="hidden" name="adminid" id="adminid" />
              <div class="row">
                <div class="input-field col s12">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >Name</label
                    >
                    <input
                      type="name"
                      name="adminname"
                      class="form-control"
                      id="adminname"
                    />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >Email</label
                    >
                    <input
                      type="email"
                      name="adminemail"
                      class="form-control"
                      id="adminemail"
                      autocomplete="email"
                    />
                  </div>
                </div>
                <div class="input-field col s6">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >Contact</label
                    >
                    <input
                      type="number"
                      name="admincontact"
                      class="form-control"
                      id="admincontact"
                    />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >Password</label
                    >
                    <input
                      type="password"
                      name="adminpassword"
                      class="form-control"
                      id="adminpassword"
                      autocomplete="new-password"
                    />
                  </div>
                </div>
                <div class="input-field col s6">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >Confirm Password</label
                    >
                    <input
                      type="password"
                      name="cp"
                      class="form-control"
                      id="cp"
                      autocomplete="new-password"
                    />
                  </div>
                </div>
              </div>
              <div class="text-center m-2">
                <button
                  type="submit"
                  id="updBtn"
                  class="btn btn-primary"
                  onclick="load()"
                  onsubmit="load()"
                >
                  Edit Profile
                </button>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary close"
              data-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Delete User Modal -->
    <form action="" method="post">
      <div class="modal" id="deleteModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <input type="hidden" name="adminid" id="adminid" />
              <h5 class="modal-title">Confirmation</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <p>Are you Sure to delete your Profile ?</p>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-primary"
                id="deleteBtn"
                onclick="load()"
                onsubmit="load()"
              >
                Delete
              </button>
              <button
                type="button"
                class="btn btn-secondary close"
                data-dismiss="modal"
                aria-label="Close"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    </form>

    <% } %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
      crossorigin="anonymous"
    ></script>
    <script>
      function load() {
        localStorage.clear();
        location.href = "http://localhost:3000";
      }

      $(document).ready(function () {
        $(".modal").modal();

        $("#btnEdit").click(function () {
          $("#exampleModal").modal("show");

          const admin = JSON.parse($(this).attr("adminprofile"));

          $("#adminid").val(admin.adminid);

          $("#adminname").val(admin.adminname);
          $("#adminemail").val(admin.adminemail);
          $("#admincontact").val(admin.admincontact);
          $("#adminpassword").val(admin.adminpassword);
          $("#cp").val(admin.adminpassword);

          $("#updBtn").click(function () {
            $.getJSON(
              "/admin/editAdminProfile",
              {
                adminid: $("#adminid").val(),
                adminname: $("#adminname").val(),
                adminemail: $("#adminemail").val(),
                admincontact: $("#admincontact").val(),
                adminpassword: $("#adminpassword").val(),
              },
              function () {
                window.location.href = "http://localhost:3000";
              }
            );
          });
        });

        $("#btnDelete").click(function () {
          $("#deleteModal").modal("show");

          const admin = JSON.parse($(this).attr("adminprofile"));

          $("#adminid").val(admin.adminid);

          $("#deleteBtn").click(function () {
            $.getJSON(
              "/admin/deleteAdminProfile",
              {
                adminid: $("#adminid").val(),
              },
              function () {
                window.location.href = "http://localhost:3000";
              }
            );
          });
        });

        $(".close").click(function () {
          $("#exampleModal").modal("hide");
          $("#deleteModal").modal("hide");
        });
      });
    </script>
  </body>
</html>
